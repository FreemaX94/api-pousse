# Example environment variables

# MongoDB
MONGODB_URI=mongodb://localhost:27017/api-pousse

# Security
JWT_SECRET=changemejwt
SESSION_SECRET=changemesecret
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# App configuration
CORS_ORIGIN=http://localhost:3000
PORT=3001
NODE_ENV=development
SHEET_SYNC_URL=https://docs.google.com/spreadsheets/your-id

# OAuth2 (Bearer Token) for Nieuwkoop
NIEUWKOOP_CLIENT_ID=your_client_id
NIEUWKOOP_CLIENT_SECRET=your_client_secret
NIEUWKOOP_BASE_URL=https://api.example.com
NIEUWKOOP_TOKEN_URL=https://api.example.com/oauth2/token

# Basic Auth for Customer API endpoints
NIEUWKOOP_BASIC_USER=your_username
NIEUWKOOP_BASIC_PASS=your_password

# Session
SESSION_NAME=sid

# API URL used by Swagger and frontend
API_BASE_URL=http://localhost:3001/api
VITE_API_BASE_URL=http://localhost:3001/api
GOOGLE_CALENDAR_ID=your_calendar_id
RECAPTCHA_SECRET=your_recaptcha_secret
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
